<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="NutritionTracker.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <!--style with selectors-->
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://NutritionTracker/Resources/BaseStyles.axaml" />
    </Application.Styles>

    <!--controlthemes and resources such as brushes-->
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
              <MergeResourceInclude Source="avares://NutritionTracker/Resources/Base.axaml" />
              <MergeResourceInclude Source="avares://NutritionTracker/Resources/Themes.axaml" />
            </ResourceDictionary.MergedDictionaries>
          </ResourceDictionary>
    </Application.Resources>
</Application>