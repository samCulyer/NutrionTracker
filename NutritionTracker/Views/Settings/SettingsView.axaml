<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:NutritionTracker.Views.Settings"
             x:DataType="vm:SettingsViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="NutritionTracker.SettingsView" Background="Brown">
    <Design.DataContext>
		<vm:SettingsViewModel/>
    </Design.DataContext>

    <Grid Margin="10" RowDefinitions="*,*">
       <ComboBox ItemsSource="{Binding Themes}"
          SelectedItem="{Binding CurrentTheme, Mode=TwoWay}">
           <!--<DataTemplate>
            <Border Width="24" Height="24"
                    Background="{Binding Themes.BackgroundBrush}"
                    CornerRadius="4"
                    Margin="2"/>
        </DataTemplate>-->
       </ComboBox>

    </Grid>

</UserControl>
