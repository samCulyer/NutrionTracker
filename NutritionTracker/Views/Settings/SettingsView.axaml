<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:NutritionTracker.Views.Settings"
             x:DataType="vm:SettingsViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="NutritionTracker.Views.Settings.SettingsView" Background="Brown">
    <Design.DataContext>
		<vm:SettingsViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*" ColumnDefinitions="*,*">
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
            <Label Content="Theme:" Target="ThemeComboBox"/>
            <ComboBox x:Name="ThemeComboBox" ItemsSource="{Binding Themes}"
                 SelectedItem="{Binding CurrentTheme, Mode=TwoWay}"/>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
            <Label Content="FontSize:" Target="ThemeComboBox"/>
            <NumericUpDown Minimum="10" Maximum="40"
                Increment="1" Value="{Binding DSFontSize, Mode=TwoWay}"/>
        </StackPanel>

    </Grid>

</UserControl>
